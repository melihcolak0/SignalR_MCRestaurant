@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Hesabı Ekleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Sosyal Medya Adı</label>
                                <input type="text" asp-for="Title" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Link</label>
                                <input type="text" asp-for="Url" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>İkon Url</label>
                                <input type="text" asp-for="Icon" class="form-control">
                            </div>
                            <br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
