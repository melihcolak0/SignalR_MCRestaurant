@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya  Listeleme</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya  ile ilgili işlemleri aşağıda gerçekleştirebilirisiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Sosyal Medya</th>
                                    <th scope="col">Url</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Hesabı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
