@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listeleme</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirim ile ilgili işlemleri aşağıda gerçekleştirebilirisiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Bildirim Türü</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NotificationId</td>
                                        <td>@item.Type</td>
                                        <td>@item.Icon</td>
                                        <td>@item.NotificationDate.ToString("dd MMM yyyy - HH:mm")</td>
                                        @if(item.Status)
                                        {
                                            <td><a href="/Notification/ChangeNotificationStatus/@item.NotificationId" class="btn btn-outline-dark">Okunmadı Yap</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Notification/ChangeNotificationStatus/@item.NotificationId" class="btn btn-outline-success">Okundu Yap</a></td>
                                        }                                       
                                        <td><a href="/Notification/DeleteNotification/@item.NotificationId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Notification/UpdateNotification/@item.NotificationId" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Notification/CreateNotification" class="btn btn-outline-primary">Yeni Bildirim Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
