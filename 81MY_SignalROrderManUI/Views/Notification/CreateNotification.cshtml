@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Ekleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Bildirim Türü</label>
                                <input type="text" asp-for="Type" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>İkon</label>
                                <input type="text" asp-for="Icon" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Bildirim Tarihi</label>
                                <input type="datetime" asp-for="NotificationDate" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" asp-for="Description" class="form-control">
                            </div>                            
                            <br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
