@model _81MY_SignalROrderManUI.DTOs.CategoryDtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Kategori Id</label>
                                <input type="text" asp-for="CategoryId" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label>Kategori Adı</label>
                                <input type="text" asp-for="CategoryName" class="form-control">
                            </div>
                            <br />
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
