@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mail İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönderme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Alıcı Mail</label>
                                <input type="text" asp-for="ReceiverMail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Konu</label>
                                <input type="text" asp-for="Subject" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mesajınız</label>
                                <textarea class="form-control" asp-for="MailContent" rows="5"></textarea>
                            </div>                            
                            <br />
                            <button class="btn btn-primary">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
