@model CreateProductDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Ekleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Ürün Adı</label>
                                <input type="text" asp-for="ProductName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Fiyat</label>
                                <input type="text" asp-for="Price" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Resim Url</label>
                                <input type="text" asp-for="ImageUrl" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Kategori</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>
                            <br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
