		<script type="text/javascript">
			$(document).ready(() => {
				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7183/SignalRHub").build();
				$("#connstatus").text(connection.state);

				connection.start().then(() => {
					$("#connstatus").text(connection.state);

					setInterval(() => {
						connection.invoke("SendStatistics");
					}, 1000);

				}).catch((err) => { console.log(err) });

				connection.on("ReceiveCategoryCount", (value) => {
					$("#categorycount").text(value);
				});

				connection.on("ReceiveProductCount", (value) => {
					$("#productcount").text(value);
				});

				connection.on("ReceiveActiveCategoryCount", (value) => {
					$("#activecategorycount").text(value);
				});

				connection.on("ReceivePassiveCategoryCount", (value) => {
					$("#passivecategorycount").text(value);
				});

				connection.on("ReceiveProductCountByCategoryHamburger", (value) => {
					$("#productcountbyhamburger").text(value);
				});

				connection.on("ReceiveProductCountByCategoryDrink", (value) => {
					$("#productcountbydrink").text(value);
				});

				connection.on("ReceiveAvgProductPrice", (value) => {				
				let formatted = parseFloat(value).toFixed(2).replace('.', ',') + ' ₺';
				$("#avgproductprice").text(formatted);	
				});

				connection.on("ReceiveMaxPriceProduct", (value) => {
					$("#maxpriceproduct").text(value);
				});

				connection.on("ReceiveMinPriceProduct", (value) => {
					$("#minpriceproduct").text(value);
				});				

				connection.on("ReceiveAvgHamburgersPrice", (value) => {
				let formatted = parseFloat(value).toFixed(2).replace('.', ',') + ' ₺';
				$("#avghamburgerprice").text(formatted);
				});

				connection.on("ReceiveOrderCount", (value) => {
					$("#ordercount").text(value);
				});

				connection.on("ReceiveActiveOrderCount", (value) => {
					$("#activeordercount").text(value);
				});				

				connection.on("ReceiveLastOrderPrice", (value) => {
				let formatted = parseFloat(value).toFixed(2).replace('.', ',') + ' ₺';
				$("#lastorderprice").text(formatted);
				});

				connection.on("ReceiveMoneyCaseTotalAmount", (value) => {
				let formatted = parseFloat(value).toFixed(2).replace('.', ',') + ' ₺';
				$("#moneycasetotalamount").text(formatted);
				});

				connection.on("ReceiveTodaysTotalPrice", (value) => {
				let formatted = parseFloat(value).toFixed(2).replace('.', ',') + ' ₺';
				$("#todaystotalprice").text(formatted);
				});

				connection.on("ReceiveRestaurantTableCount", (value) => {
					$("#restauranttablecount").text(value);
				});

			});
		</script>

