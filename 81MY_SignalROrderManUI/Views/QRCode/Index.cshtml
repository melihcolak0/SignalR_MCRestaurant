
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">QR Kod Oluşturma</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>QR Kod</label>
                                <input type="text" name="value" class="form-control">
                            </div>
                            <br />
                            <input type="submit" value="QR Kod Oluştur" class="btn btn-primary">                            
                        </div>
                    </div>
                </form>
                @if (ViewBag.QrCodeImage != null)
                {
                    <img src="@ViewBag.QrCodeImage" alt="" style="width:400px; height:400px;" />
                }
            </div>
        </div>
    </div>
</div>
