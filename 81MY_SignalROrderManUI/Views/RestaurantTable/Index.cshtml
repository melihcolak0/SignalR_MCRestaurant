@model List<ResultRestaurantTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Masa İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Masa Listeleme</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Masa ile ilgili işlemleri aşağıda gerçekleştirebilirisiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Masa</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RestaurantTableId</td>
                                        <td>@item.Name</td>
                                        <td><a href="/RestaurantTable/DeleteRestaurantTable/@item.RestaurantTableId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/RestaurantTable/UpdateRestaurantTable/@item.RestaurantTableId" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/RestaurantTable/CreateRestaurantTable" class="btn btn-outline-primary">Yeni Masa Ekle</a>
                        <a href="/RestaurantTable/TableListByStatus" class="btn btn-outline-dark">Masa Durumları</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
