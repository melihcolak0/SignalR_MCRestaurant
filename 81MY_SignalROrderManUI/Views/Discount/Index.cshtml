@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim Alanı İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Alanı Listeleme</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim alanı ile ilgili işlemleri aşağıda gerçekleştirebilirisiniz. Tema bütünlüğü için iki adet indirim alanı kullanmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td><a href="/Discount/DeletDiscount/@item.DiscountId" class="btn btn-outline-dark">Pasif Yap</a></td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountId" class="btn btn-outline-warning">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim Alanı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
