
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index2.cshtml";
}
<div class="hero_area">
    <div class="bg-box">
        <img src="/feane-1.0.0/images/hero-bg.jpg" alt="">
    </div>
    @await Component.InvokeAsync("_UINavBarComponent")
</div>
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bize Mesaj Gönderin
            </h2>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form_container">
                    <form method="post">
                        <div>
                            <label>Kullanıcı Adınız</label>
                            <input type="text" class="form-control" id="userinput"/>
                        </div>
                        <div>
                            <label>Mesajınız</label>
                            <textarea class="form-control" id="messageinput" rows="5" style="min-height: 120px; resize: vertical; height: auto;"></textarea>
                        </div>
                        <div class="btn_box">
                            <button id="sendbutton">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>            
        </div>
        <div class="row">
            <div class="col-md-12">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul id="messagelist" class="list-group"></ul>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="/js/chat.js"></script>
