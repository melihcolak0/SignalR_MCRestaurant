@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Rezervasyon Id</label>
                                <input type="text" asp-for="BookingId" class="form-control" readonly>
                            </div>                            
                            <div class="form-group">
                                <label>Adı ve Soyadı</label>
                                <input type="text" asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input type="text" asp-for="Phone" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mail</label>
                                <input type="email" asp-for="Mail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Kişi Sayısı</label>
                                <input type="number" asp-for="PersonCount" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Tarih</label>
                                <input type="date" asp-for="BookDate" class="form-control">
                            </div>
                            <br />
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
