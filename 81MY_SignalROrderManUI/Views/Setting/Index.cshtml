@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Profil Bilgileri Düzenleme</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Adınız</label>
                                <input type="text" asp-for="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Soyadınız</label>
                                <input type="text" asp-for="Surname" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mail Adresiniz</label>
                                <input type="email" asp-for="Mail" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adınız</label>
                                <input type="text" asp-for="Username" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Şifreniz</label>
                                <input type="password" asp-for="Password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Şifreniz Tekrar</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control">
                            </div>
                            <br />
                            <button class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
